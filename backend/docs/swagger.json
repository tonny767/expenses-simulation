                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "models.Expense": {
            "type": "object",
            "properties": {
                "amount_idr": {
                    "type": "integer"
                },
                "approval": {
                    "$ref": "#/definitions/models.Approval"
                },
                "auto_approved": {
                    "type": "boolean"
                },
                "created_at": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "processed_at": {
                    "type": "string"
                },
                "receipt_url": {
                    "type": "string"
                },
                "requires_approval": {
                    "type": "boolean"
                },
                "status": {
                    "$ref": "#/definitions/constants.ExpenseStatus"
                },
                "submitted_at": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                },
                "user": {
