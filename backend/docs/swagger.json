        "models.User": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "role": {
                    "description": "\"user\" or \"manager\"",
                    "allOf": [
                        {
                            "$ref": "#/definitions/constants.UserRole"
                        }
                    ]
                }
            }
        }
