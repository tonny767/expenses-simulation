    "definitions": {
        "actions.SubmitExpenseInput": {
            "type": "object",
            "properties": {
                "amount_idr": {
                    "type": "integer"
                },
                "description": {
                    "type": "string"
                },
                "receipt_url": {
                    "type": "string"
                },
                "user_id": {
                    "type": "integer"
                }
            }
        },
        "constants.ApprovalStatus": {
            "type": "string",
            "enum": [
                "pending",
                "approved",
                "rejected"
            ],
            "x-enum-varnames": [
                "ApprovalStatusPending",
                "ApprovalStatusApproved",
                "ApprovalStatusRejected"
            ]
        },
        "constants.ExpenseStatus": {
            "type": "string",
            "enum": [
                "pending",
                "approved",
                "rejected",
                "completed"
            ],
            "x-enum-varnames": [
                "ExpenseStatusPending",
                "ExpenseStatusApproved",
                "ExpenseStatusRejected",
                "ExpenseStatusCompleted"
            ]
        },
        "constants.UserRole": {
            "type": "string",
            "enum": [
                "user",
                "manager"
            ],
            "x-enum-varnames": [
                "UserRoleUser",
                "UserRoleManager"
            ]
        },
        "controllers.ExpensesListResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.Expense"
                    }
                },
                "meta": {
                    "$ref": "#/definitions/controllers.PaginationMeta"
                }
            }
        },
        "controllers.HealthCheckResponse": {
            "type": "object",
            "properties": {
                "database": {
                    "type": "string",
                    "example": "up"
                },
                "status": {
                    "type": "string",
                    "example": "ok"
                },
                "time": {
                    "type": "string",
                    "example": "2023-10-05T14:48:00Z"
                }
            }
        },
        "controllers.LoginResponse": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "john@example.com"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "name": {
                    "type": "string",
                    "example": "John Doe"
                },
                "role": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/constants.UserRole"
                        }
                    ],
                    "example": "constants.UserRoleUser"
                },
                "token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6Ikp"
                }
            }
        },
        "controllers.MessageResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "operation successful"
                }
            }
        },
        "controllers.PaginationMeta": {
            "type": "object",
            "properties": {
                "limit": {
                    "type": "integer",
                    "example": 10
                },
                "page": {
                    "type": "integer",
                    "example": 1
                },
                "total": {
                    "type": "integer",
                    "example": 42
                }
            }
        },
        "controllers.StatusExpenseRequest": {
            "type": "object",
            "properties": {
                "approver_id": {
                    "type": "integer",
                    "example": 99
                },
                "notes": {
                    "type": "string",
                    "example": "Approved"
                }
            }
        },
        "httputil.HTTPError": {
            "type": "object",
